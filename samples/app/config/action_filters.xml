<configurations>

	<configuration environment="development" context="web">
		<filters>

			<filter name="ExecutionTimeFilter" class="AgaviExecutionTimeFilter">
				<parameters>
					<parameter name="comment">On</parameter>
				</parameters>
			</filter>

		</filters>
	</configuration>

</configurations>