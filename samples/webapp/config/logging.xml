<configurations>
	
	<configuration>
		<loggers>
			<logger name="default" class="AgaviLogger" priority="AgaviLogger::INFO">
				<appenders>
					<appender>InfoSyslogAppender</appender>
					<appender>MyAppLogAppender</appender>
				</appenders>
			</logger>

			<logger name="error" class="AgaviLogger" priority="AgaviLogger::ERROR">
				<appenders>
					<appender>ErrorSyslogAppender</appender>
					<appender>MyAppErrorLogAppender</appender>
				</appenders>
			</logger>
		</loggers>
		<appenders>
			<appender name="InfoSyslogAppender" class="SyslogAppender" layout="MyPassthruLayout">
				<parameters>
					<parameter name="priority">LOG_INFO</parameter>
				</parameters>
			</appender>

			<appender name="ErrorSyslogAppender" class="SyslogAppender" layout="MyPassthruLayout">
				<parameters>
					<parameter name="priority">LOG_ERROR</parameter>
				</parameters>
			</appender>

			<appender name="MyAppLogAppender" class="AgaviFileAppender" layout="MyPassthruLayout">
				<parameters>
					<parameter name="file">%core.webapp_dir%/log/myapp.log</parameter>
				</parameters>
			</appender>

			<appender name="MyAppErrorLogAppender" class="AgaviFileAppender" layout="MyPassthruLayout">
				<parameters>
					<parameter name="file">%core.webapp_dir%/log/myapp_error.log</parameter>
				</parameters>
			</appender>
		</appenders>
		<layouts>
			<layout name="MyPassthruLayout" class="AgaviPassthruLayout" />
		</layouts>
	</configuration>

</configurations>