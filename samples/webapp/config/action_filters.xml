<configurations>
	
	<configuration environment="development">
		<filters>
			
			<filter name="ExecutionTimeFilter" class="AgaviExecutionTimeFilter">
				<parameters>
					<parameter name="comment">On</parameter>
				</parameters>
			</filter>
			
		</filters>
	</configuration>
	
	
	<configuration environment="fooBar">
		<filters>
			
			<filter name="FormPopulationFilter" class="AgaviFormPopulationFilter">
			</filter>
			
		</filters>
	</configuration>
	
</configurations>