<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/testing/suites/1.0">
	<ae:configuration>
		<suites>
			<suite name="Action">
				<include>unit/action/.*Test.php</include>
			</suite>
			<suite name="Config">
				<include>unit/config/.*Test.php</include>
			</suite>
			<suite name="Context">
				<include>unit/context/.*Test.php</include>
			</suite>
			<suite name="Controller">
				<include>unit/controller/.*Test.php</include>
			</suite>
			<suite name="Database">
				<include>unit/database/.*Test.php</include>
			</suite>
			<suite name="Date">
				<include>unit/date/.*Test.php</include>
				<exclude>BaseCalendarTest.php</exclude>
			</suite>
			<suite name="Exception_">
				<!-- Setting suite name to "Exception" causes a weird issue: -->
				<!--
				There was 1 failure:
				
				1) Warning
				No tests found in class "Exception".
				
				src/testing/AgaviTesting.class.php:101
				test/run-tests.php:20
				-->
				<include>unit/exception/.*Test.php</include>
			</suite>
			<suite name="Filter">
				<include>unit/filter/.*Test.php</include>
			</suite>
			<suite name="Logging">
				<include>unit/logging/.*Test.php</include>
			</suite>
			<suite name="Model">
				<include>unit/model/.*Test.php</include>
			</suite>
			<suite name="Renderer">
				<include>unit/renderer/.*Test.php</include>
			</suite>
			<suite name="Request">
				<include>unit/request/.*Test.php</include>
			</suite>
			<suite name="Response">
				<include>unit/response/.*Test.php</include>
			</suite>
			<suite name="Routing">
				<include>unit/routing/.*Test.php</include>
			</suite>
			<suite name="Session">
				<testfiles>
					<testfile>unit/session/AgaviSessionStorageTest.php</testfile>
				</testfiles>
			</suite>
			<suite name="Testing">
				<include>unit/testing/.*Test.php</include>
			</suite>
			<suite name="Translation">
				<include>unit/translation/.*Test.php</include>
			</suite>
			<suite name="User">
				<include>unit/user/.*Test.php</include>
			</suite>
			<suite name="Util">
				<include>unit/util/.*Test.php</include>
			</suite>
			<suite name="Validator">
				<include>unit/validator/.*Test.php</include>
				<exclude>BaseValidatorTest.php</exclude>
			</suite>
			<suite name="View">
				<include>unit/view/.*Test.php</include>
			</suite>
		</suites>
	</ae:configuration>
</ae:configurations>